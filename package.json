{
  "name": "react-markdown-editor",
  "version": "1.0.0",
  "main": "",
  "license": "MIT",
  "author": "",
  "ava": {
    "require": [
      "babel-register"
    ],
    "files": [
      "./src/test/*.js"
    ]
  },
  "scripts": {
    "bs": "browser-sync start -s ./dist -f ./dist/js",
    "html:watch": "yarn html:build -- -w",
    "html:build": "pug -P -D -s ./src/pug/pages -o ./dist",
    "css:lint": "stylelint './src/css/**/*.css'",
    "css:watch": "yarn css:build -- -w",
    "css:build": "postcss -c ./config/postcss.json",
    "js:mkdirp": "mkdirp ./dist/js",
    "js:lint": "eslint -c standard ./src/js",
    "js:watch": "yarn js:build -- -w",
    "js:build": "rollup -c ./config/rollup.js",
    "copy:watch": "yarn copy:build -- -w",
    "copy:build": "cpx './src/img/*.*' ./dist/img",
    "build-file-clean": "rimraf ./dist",
    "watch": "yarn html:watch & yarn css:watch & yarn js:watch & yarn copy:watch &",
    "build": "yarn build-file-clean && yarn html:build && yarn css:lint && yarn css:build && yarn js:lint && yarn js:build && yarn copy:build",
    "start": "yarn build && yarn watch && yarn bs",
    "lint": "yarn css:lint & yarn js:lint",
    "test": "ava --verbose"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "ava": "^0.18.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "browser-sync": "^2.18.8",
    "cpx": "^1.5.0",
    "css-mqpacker": "^5.0.1",
    "csswring": "^5.1.1",
    "eslint": "^3.15.0",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.0.1",
    "marked": "^0.3.6",
    "md2react": "^0.8.8",
    "mkdirp": "^0.5.1",
    "postcss-calc": "^5.3.1",
    "postcss-clearfix": "^1.0.0",
    "postcss-cli": "^2.6.0",
    "postcss-color-function": "^3.0.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-import": "^9.1.0",
    "postcss-mixins": "^5.4.1",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "postcss-size": "^1.1.1",
    "pug-cli": "^1.0.0-alpha6",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^3.2.2",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iwamooo/react-markdown-editor"
  }
}
